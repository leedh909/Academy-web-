	<div id="f1">
		<h1>팝업창 만들기</h1>
		<button onclick="openWind();" name="btn">창열기</button>
		<div id="tt"></div>
		<h1>회원가입하기(div팝업창)</h1>
		<button onclick="registForm();" name="btn">회원가입</button>
	</div>
	<hr>
	<div id="result"></div>
	<!--  -->
	<div id="regist">
		<form>
			<table>
				<caption>회원가입</caption>
				<tr>
					<td>ID</td>
					<td><input type="text" name="id" id="id" onclick="idchk();" readonly="readonly">
					<input type="button" value="중복체크" onclick="idCheck();"></td>
				</tr>
				<tr>
					<td>PW</td>
					<td><input type="password" name="pwd" id="pwd" style="color:red;"></td>
				</tr>
				<tr>
					<td colspan="2" align="center">
						<input type="button" value="확인" onclick="closeWind();">
					</td>
				</tr>
			</table>
		</form>
	</div>
	
	
