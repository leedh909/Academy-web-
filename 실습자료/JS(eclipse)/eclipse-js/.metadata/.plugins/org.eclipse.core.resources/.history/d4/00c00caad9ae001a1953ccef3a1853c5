<style type="text/css">
	#regist{
		border: 1px solid black;
		background: pink;
		position: absolute;
		top: 200px;
		left: 500px;
		display: none;
	}
</style>
<script type="text/javascript">
	function openWind() {
		var url ="js13_window02.html";
		var title ="";
		var prop ="top =200px, left=600px, width=500px, height=500px, resizable=yes";
		window.open(url,title,prop);
		
	}
	function registForm() {
		document.getElementById("regist").style.display = "block";
		document.body.style.background = "gray";
		
		var btns = document.getElementsByName("btn");
		
		for(var i in btns){
			btns[i].disabled = "disabled";
		}

	}
	function idchk() {
		alert("중복체크를 하세요!");
	}
	function idCheck() {
		window.open("js13_window03.html","","width=300px, height=300px");
	}
	function closeWind() {
		var v_id = document.getElementById("id").value;
		var v_pwd = document.getElementById("pwd").value;
		console.log("v_id");
		console.log("v_pwd");
		
		var result = document.getElemetById("result");
		result.innerHTML += "ID : "+v_id +"<br> PW : "+v_pwd+"<br>";
		
	}
	
	
</script>
</head>
<body>
	<h1>window 객체</h1>
